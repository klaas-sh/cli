{
  "name": "@klaas/monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Remote access wrapper for Claude Code",
  "repository": {
    "type": "git",
    "url": "https://github.com/smoking-media/klaas.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.0.0",
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=4.0.0"
  },
  "scripts": {
    "build": "yarn workspaces foreach -Aptv run build",
    "build:api": "yarn workspace @klaas/api build",
    "build:cli": "cd packages/cli && cargo build --release",
    "db:migrate": "yarn workspace @klaas/api db:migrate",
    "deploy:api": "yarn workspace @klaas/api deploy",
    "deploy:api:production": "yarn workspace @klaas/api deploy:production",
    "deploy:api:staging": "yarn workspace @klaas/api deploy:staging",
    "dev": "concurrently -n api,cli -c blue,green \"yarn dev:api\" \"yarn dev:cli\"",
    "dev:api": "yarn workspace @klaas/api dev",
    "dev:cli": "cd packages/cli && cargo run",
    "dev:dashboard": "yarn workspace @klaas/dashboard clean && yarn workspace @klaas/dashboard dev",
    "lint": "yarn workspaces foreach -Aptv run lint",
    "pre-commit": "yarn install && yarn lint && yarn typecheck && yarn test && yarn build",
    "test": "yarn workspaces foreach -Aptv run test:once",
    "test:api": "yarn workspace @klaas/api test:once",
    "test:cli": "cd packages/cli && cargo test",
    "typecheck": "yarn workspaces foreach -Aptv run typecheck"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
