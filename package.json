{
  "name": "@klaas/monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Remote access wrapper for Claude Code",
  "repository": {
    "type": "git",
    "url": "https://github.com/klaas-sh/platform.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "yarn@4.0.0",
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=4.0.0"
  },
  "scripts": {
    "build": "yarn workspaces foreach -Aptv run build",
    "build:api": "yarn workspace @klaas/api build",
    "build:cli": "source ~/.cargo/env 2>/dev/null; cd packages/cli && cargo build --release",
    "db:migrate": "yarn workspace @klaas/api db:migrate",
    "deploy:api": "yarn workspace @klaas/api deploy",
    "deploy:api:production": "yarn workspace @klaas/api deploy:production",
    "deploy:api:staging": "yarn workspace @klaas/api deploy:staging",
    "dev": "concurrently -n api,cli -c blue,green \"yarn dev:api\" \"yarn dev:cli\"",
    "dev:all": "concurrently -n api,dashboard,cli -c blue,magenta,green \"yarn dev:api\" \"yarn dev:dashboard\" \"yarn dev:cli\"",
    "dev:api": "yarn workspace @klaas/api dev",
    "dev:cli": "source ~/.cargo/env 2>/dev/null; cd packages/cli && cargo run",
    "dev:dashboard": "yarn workspace @klaas/dashboard clean && yarn workspace @klaas/dashboard dev",
    "lint": "yarn workspaces foreach -Aptv run lint",
    "pre-commit": "yarn install && yarn lint && yarn typecheck && yarn test && yarn build",
    "push:cli": "git subtree push --prefix=packages/cli cli main",
    "push:github-profile": "git subtree push --prefix=packages/github-profile github-profile main",
    "push:homebrew-tap": "git subtree push --prefix=packages/homebrew-tap homebrew-tap main",
    "push:npm": "git subtree push --prefix=packages/npm npm main",
    "push:platform": "git push origin main",
    "push:public": "yarn push:cli && yarn push:github-profile && yarn push:homebrew-tap && yarn push:npm && yarn push:scoop-bucket",
    "push:scoop-bucket": "git subtree push --prefix=packages/scoop-bucket scoop-bucket main",
    "release:cli": "node scripts/release-cli.js",
    "test": "yarn workspaces foreach -Aptv run test:once",
    "test:api": "yarn workspace @klaas/api test:once",
    "test:cli": "source ~/.cargo/env 2>/dev/null; cd packages/cli && cargo test",
    "typecheck": "yarn workspaces foreach -Aptv run typecheck"
  },
  "devDependencies": {
    "barva": "^1.0.0",
    "concurrently": "^9.1.0",
    "get-port-cli": "^3.0.0"
  }
}
